{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "dom"],
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    }
}
